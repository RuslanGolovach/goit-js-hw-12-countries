<div>
  <h2 class="title-container">{{name}}</h2>
  <div class="country-container">
    <ul class="info-list">
      <li class="info-item">Capital:{{capital}}</li>
      <li class="info-item">Population:{{population}}</li>
      <li class="info-item">Languages:
        <ul>
          {{#each languages}}
          <li class="language-item">{{this.name}}</li>
          {{/each}}
        </ul>
      </li>
    </ul>
    <div class="img-country">
      <img src={{flag}} alt={{name}} width="320">
    </div>
  </div>
</div>